<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/field_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:weightSum="6" >

        <TableRow
            android:id="@+id/field_row_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <Button
                android:id="@+id/btn_1_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@color/player_1_color"
                android:textSize="@dimen/captions_size" />

            <Button
                android:id="@+id/btn_1_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="@dimen/captions_size" />

            <Button
                android:id="@+id/btn_1_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="@dimen/captions_size" />

        </TableRow>

        <TableRow
            android:id="@+id/field_row_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <Button
                android:id="@+id/btn_2_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="@dimen/captions_size" />

            <Button
                android:id="@+id/btn_2_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="@dimen/captions_size" />

            <Button
                android:id="@+id/btn_2_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="@dimen/captions_size" />

        </TableRow>

        <TableRow
            android:id="@+id/field_row_3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <Button
                android:id="@+id/btn_3_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="@dimen/captions_size" />

            <Button
                android:id="@+id/btn_3_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="@dimen/captions_size" />

            <Button
                android:id="@+id/btn_3_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="@dimen/captions_size" />

        </TableRow>
    </LinearLayout>

    <TableRow
        android:id="@+id/buttons_row"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <Button
            android:id="@+id/restart_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/restart_button" />

    </TableRow>

</TableLayout>